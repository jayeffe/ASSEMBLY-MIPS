#MULTIPLO DI 8 CON MASCHERA 

.data
inserisci: .asciiz "inserisci il numero "
multiplo: .asciiz "multiplo di 8 "
not_multiplo: .asciiz "non multiplo "

.text


.globl main
main:

la $a0, inserisci
li $v0,4
syscall

li $v0,5
syscall

move $t9,$v0 #in $t0 ho il numero che ho inserito da tastiera

#ora faccio uno shift a destra 
srl $t8,$t9,3 #shifto i 3 bit 

#ad esempio ho 16
#1000
#dopo lo shift 00010

#shifto a sinistra e se è multiplo torno al numero di partenza 

sll $t7,$t8,3

beq $t7,$t9,multi

la $a0,not_multiplo
li $v0,4
syscall

j esci



multi:
la $a0,multiplo
li $v0,4
syscall 




esci:
li $v0,10
syscall
