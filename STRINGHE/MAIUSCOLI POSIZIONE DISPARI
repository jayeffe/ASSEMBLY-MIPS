.data
inserisci: .asciiz "inserisci la stringa "
str: .space 100

.text


.globl main
main:

la $a0,inserisci
li $v0,4
syscall

la $a0,str
li $a1,98
li $v0,8
syscall


la $a0,str
jal primo_maiuscolo

la $a0,str
li $v0,4
syscall

esci:
li $v0,10
syscall


primo_maiuscolo:
move $t9,$a0
li $t1,0
ciclo_maiuscolo:
lbu $t2,($t9)
beq $t2,'\n',esci_maiuscolo
beq $t2,32,cambia_stato

#quando arrivo allo spazio lo stato cambia e diventa 1 fino a che non incontro lo spazio successivo
#controllo quando è zero 
beq $t1,0,flag0

j flag1

flag0:
#quando il flag è zero voglio che la parola da maiuscola passi a minuscola, se gia lo è non ce ne frega nulla
blt $t2,65,maiuscolo
bgt,$t2,90,maiuscolo 

addi $t2,$t2,32
addi $t9,$t9,1
j ciclo_maiuscolo 

maiuscolo:
addi $t9,$t9,1
j ciclo_maiuscolo 

cambia_stato:
not $t1,$t1
addi $t9,$t9,1
j ciclo_maiuscolo

flag1:
#quando il flag sarebbe 1 se la parola è maiuscola passa a minuscola 
blt $t2,97,minuscola
bgt $t2,122,minuscola

addi $t2,$t2,-32
sb $t2,($t9)
addi $t9,$t9,1
j ciclo_maiuscolo 

minuscola:
addi $t9,$t9,1
j ciclo_maiuscolo 

esci_maiuscolo:

jr $ra 