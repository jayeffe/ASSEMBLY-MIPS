#dato una carattere controllare se e' una vocale 
#e trasformare il maiuscolo i carattere successivo 

.data
inserisci: .asciiz "inserisci la stringa "
str: .space 100

.text


.globl main
main:

la $a0,inserisci
li $v0,4
syscall

la $a0,str
li $a1,98
li $v0,8
syscall


la $a0,str
jal maiuscolo_successivo

la $a0,str
li $v0,4
syscall

esci:
li $v0,10
syscall

maiuscolo_successivo:
move $t9,$a0

ciclo_maiuscolo:
lbu $t2,($t9)
beq $t2,'\n',esci_maiuscolo

beq $t2,'a',trasforma
beq $t2,'e',trasforma
beq $t2,'i',trasforma
beq $t2,'o',trasforma
beq $t2,'u',trasforma

addi $t9,$t9,1
j ciclo_maiuscolo 

trasforma:
#accedo al successivo 
addi $t8,$t9,1
#carico il successivo
lbu $t3,($t8)

#controllo se t3 che sarebbe il successivo è minuscolo 
blt $t3,97,continua
bgt $t2,122,continua

addi $t3,$t3,-32
sb $t3,($t8)
addi $t8,$t8,1
j ciclo_maiuscolo 

continua:

addi $t8,$t8,1 
addi $t9,$t9,1
j ciclo_maiuscolo 
esci_maiuscolo:
jr $ra 