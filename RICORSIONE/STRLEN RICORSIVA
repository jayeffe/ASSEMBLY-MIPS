#STRLEN RICORSIVA

.data
inserisci: .asciiz "inserisci la stringa "
lunghezza: .asciiz "la lunghezza della stringa e' "
str: .space 100



.text



.globl main
main:


la $a0,inserisci
li $v0,4
syscall

la $a0,str
li $a1,98
li $v0,8
syscall

la $a0,str
jal strlen

move $a0,$v0
li $v0,1
syscall


escis:
li $v0,10
syscall


strlen:
#carico il carattere della stringa 
lbu $t0,($a0) #carico il carattere in $a0, che mi rappresenta l'indirizzo di ingresso
#scorro la stringa
beqz $t0,esci

#incremento il contatore
addi $t1,$t1,1

addi $sp,$sp,-8
sw $a0,0($sp)
sw $ra,4($sp)

addi $a0,$a0,1 #successivo

jal strlen
#ora ho puntato al successivo e il mio a0 è cambiato, ovviamente poiche
#punto ad un carattere che e' successivo, allora lo aggiorno
lw $a0,0($sp)


add $v0,$t1,-1

lw $ra,4($sp)

addi $sp,$sp,8



esci:

jr $ra
