#INVERSIONE DI UN VETTORE 

.data
frase1: .asciiz "inserimento del vettore "
frase2: .asciiz "stampa del vettore "
spazio: .asciiz " "
posizione: .asciiz "inserire la posizione " 



.text 


.globl main 
main :


addi $sp,$sp,-16
move $s0,$sp

la $a0,frase1
li $v0,4
syscall


move $a0,$s0
jal inserisci

move $a0,$s0
jal stampa 

move $a0,$s0
jal elimina 

move $a0,$s0
jal stampa_nuovo_vettore


add $sp,$sp,12
li $v0,10
syscall

inserisci:
move $t9,$a0
li $t0,0

ciclo_inserimento:
beq $t0,4,uscita_inserimento

mul $t1,$t0,4
add $t1,$t1,$t9

li $v0,5
syscall

sw $v0,($t1) # $t1 Ã¨ la mia memoria 

addi $t0,$t0,1

j ciclo_inserimento 


uscita_inserimento:

la $a0,frase2
li $v0,4
syscall
jr $ra

stampa:
move $t9,$a0
li $t0,0

ciclo_stampa:
beq $t0,4,uscita_stampa

mul $t1,$t0,4
add $t1,$t1,$t9

lw $t2,($t1)

move $a0,$t2
li $v0,1
syscall

la $a0,spazio
li $v0,4
syscall

addi $t0,$t0,1

j ciclo_stampa


uscita_stampa :
jr $ra 

elimina:
move $t9,$a0 
li $t0,0

la $a0,posizione
li $v0,4
syscall

li $v0,5
syscall

move $t7,$v0 #qui ho la mia posizione 

ciclo_elimina:
beq $t7,4,esci_elimina
mul $t1,$t7,4
add $t1,$t1,$t9 #sposto la testa 

lw $t2,($t1) #questo è il singolo elemento del vettore 

#ora devo accedere all'elemento successivo 
addi $t7,$t7,1
mul $t3,$t7,4
add $t3,$t3,$t9 #testa al successivo
lw $t4,($t3)

#ora qui metto il successivo lel precedente 
sw  $t4,($t1)
sw $t2,($t3) 

addi $t0,$t0,1
j ciclo_elimina
esci_elimina:

jr $ra



stampa_nuovo_vettore:
move $t9,$a0
li $t0,0

ciclo_stampa_new:
beq $t0,3,uscita_stampa_new

mul $t1,$t0,4
add $t1,$t1,$t9

lw $t2,($t1)

move $a0,$t2
li $v0,1
syscall

la $a0,spazio
li $v0,4
syscall

addi $t0,$t0,1

j ciclo_stampa_new
uscita_stampa_new  :
jr $ra 


